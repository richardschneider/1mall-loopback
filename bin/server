 * Licensed under the MIT license.
 */
'use strict';


var now = require("performance-now");
var start = now();

var config = require("config");
var server = require('../lib/server');
var sally = require('sally-js');
var ip = process.env.IP || 'http://localhost';
var port = process.env.PORT || 3000;
var version = require('../package.json').version;

server.listen(port, function () {
    console.log('startup time ', ((now()-start) / 1000).toFixed(3) + 's'); 

    var env = config.util.getEnv('NODE_ENV');
    console.log('e-Commerce server v%s [%s] @ %s:%d/api', version, env, ip, port);
    sally.log('e-Commerce server started');
});
